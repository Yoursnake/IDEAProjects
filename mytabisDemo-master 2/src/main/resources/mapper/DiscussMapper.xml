<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.DiscussDao">
    <resultMap id="DiscussResultMap" type="com.example.entity.Discuss">
        <id column="id" property="discussId" />
        <result  column="create_time" property="createTime" />
        <result  column="content" property="content" />
        <association property="founder" column="founder_id" javaType="com.example.entity.User" >
            <id column="id" property="userId" />
            <result column="username" property="username" />
            <result column="email" property="email" />
            <result column="phone" property="phone" />
        </association>
        <association property="task" column="task_id" javaType="com.example.entity.Task">
            <id column="id" property="taskId"/>
        </association>
    </resultMap>
    <insert id="save" parameterType="com.example.entity.Task">
        INSERT INTO
          discuss
          (founder_id,create_time,content,task_id)
          VALUE (#{founder.userId},#{createTime},#{content},#{task.taskId})
    </insert>



</mapper>